@using CvAndPortfolio.Models.Entity
@model List<TBLABOUT>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MainPageLayout.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<body>
    <!-- ======= Hero Section ======= -->
    <section id="hero" class="d-flex flex-column justify-content-center align-items-center">
        <div class="hero-container" data-aos="fade-in">
            @foreach (var item in Model)
            {
                <h1>@item.NAMESURNAME</h1>
            }

            <p>I'm <span class="typed" data-typed-items="Designer, Developer, Freelancer, Architect"></span></p>
        </div>
    </section><!-- End Hero -->

    <main id="main">

        <!-- ======= About Section ======= -->
        <section id="about" class="about">
            <div class="container">

                <div class="section-title">
                    <h2>About</h2>

                    @foreach (var item in Model)
                    {

                        <p>@item.DESCRIPTION</p>

                    }
                </div>

                <div class="row">
                    @foreach (var item in Model)
                    {
                        <div class="col-lg-4" data-aos="fade-right">
                            <img src="@item.PICURL" class="img-fluid" alt="">
                        </div>

                        <div class="col-lg-8 pt-4 pt-lg-0 content" data-aos="fade-left">
                            <h3>@item.TITLE</h3>
                            <p class="fst-italic">

                                @item.SUBTITLE

                            </p>
                            <br />
                            <div class="row">
                                <div class="col-lg-6">
                                    <ul>
                                        <li><i class="bi bi-chevron-right"></i> <strong>Adress:</strong> <span>@item.ADDRESS</span></li>
                                        <li><i class="bi bi-chevron-right"></i> <strong>Mobile:</strong> <span>@item.MOBILE</span></li>
                                        <li><i class="bi bi-chevron-right"></i> <strong>Email:</strong> <span>@item.EMAIL</span></li>
                                    </ul>
                                </div>
                                <div class="col-lg-6">
                                    <ul>
                                        <li><i class="bi bi-chevron-right"></i> <strong>Age:</strong> <span>@item.AGE</span></li>
                                        <li><i class="bi bi-chevron-right"></i> <strong>Degree:</strong> <span>@item.DEGREE</span></li>
                                        <li><i class="bi bi-chevron-right"></i> <strong>Relocation:</strong> <span>@item.RELOCATION.ToString()</span></li>
                                    </ul>
                                </div>
                            </div>
                            <p>
                                <br />

                                @item.SUBDESCRIPTION
                            </p>
                        </div>
                    }
                </div>

            </div>
        </section><!-- End About Section -->
        @Html.Action("Facts")
        @Html.Action("Skills")
        @Html.Action("Resume")
        @Html.Action("Portfolio")
        @Html.Action("Contact")
    </main><!-- End #main -->

    <a href="#" class="back-to-top d-flex align-items-center justify-content-center"><i class="bi bi-arrow-up-short"></i></a>
</body>

</html>

