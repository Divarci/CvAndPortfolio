
@using CvAndPortfolio.Models.Entity
@model List<TBLCATEGORY>

@{
    ViewBag.Title = "Categories";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<body>
    <div class="layout-page">
        <div class="content-wrapper">
            <div class="container-xxl flex-grow-1 container-p-y">
                <h4 class="fw-bold py-3 mb-4"><span class="text-muted fw-light">Portfolio /</span> Categories</h4>
                <div class="card">
                    <div class="table-responsive text-nowrap">
                        <table class="table">
                            <thead class="table-light">
                                <tr>
                                    <th>CATEGORY</th>
                                    <th>TITLE</th>
                                    <th>UPDATE</th>
                                    <th>DELETE</th>
                                </tr>
                            </thead>
                            <tbody class="table-border-bottom-0">
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.CATEGORY</td>
                                        <td>@item.TITLE</td>
                                        <td><a href="/Portfolio/CategoryUpdate/@item.ID" class="btn btn-info">EDIT</a></td>
                                        <td><a href="/Portfolio/CategoryDelete/@item.ID" class="btn btn-warning">DELETE</a></td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
                <br />
                <a href="/Portfolio/CategoryAdd/" class="btn btn-primary">ADD NEW CATEGORY</a>
            </div>
        </div>
    </div>
</body>

