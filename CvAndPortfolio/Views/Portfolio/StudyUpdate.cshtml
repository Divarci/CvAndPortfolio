
@model CvAndPortfolio.Models.Entity.TBLSTUDY

@{
    ViewBag.Title = "StudyUpdate";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}



<html>
<body>
    <div class="layout-page">
        <!-- Content wrapper -->
        <div class="content-wrapper">
            <!-- Content -->
            <div class="container-xxl flex-grow-1 container-p-y">
                <h4 class="fw-bold py-3 mb-4"><span class="text-muted fw-light">Portfolio / Studies /</span> Update</h4>
                <div class="row">
                    <div class="col-md-12">
                        <div class="card mb-4">
                            <h5 class="card-header">UPDATE STUDY</h5>
                            <hr class="my-0" />
                            <div class="card-body">
                                <form method="POST">
                                    <div class="row">
                                        <div class="mb-3 col-md-6">
                                            <label class="form-label">TITLE</label>
                                            @Html.TextBoxFor(x => x.TITLE, new { @class = "form-control" })
                                        </div>
                                        <div class="mb-3 col-md-6">
                                            <label class="form-label">CATEGORY</label>
                                            <select name="CATEGORY" class="select2 form-select">
                                                <option value="@Model.TBLCATEGORY.ID" selected>@Model.TBLCATEGORY.CATEGORY</option>

                                                @Html.Action("CategoryDropDownDefault")

                                            </select>
                                        </div>
                                        <div class="mb-3 col-md-12">
                                            <label class="form-label">DESCRIPTION</label>
                                            @Html.TextAreaFor(x => x.DESCRIPTION, new { @class = "form-control" })
                                        </div>
                                        <div class="mb-3 col-md-12">
                                            <label class="form-label">PICTURE URL</label>
                                            @Html.TextAreaFor(x => x.PICTURL, new { @class = "form-control" })
                                        </div>



                                    </div>
                                    <div class="mt-2">
                                        <button type="submit" class="btn btn-primary me-2">Update</button>
                                        <button type="reset" class="btn btn-outline-secondary">Cancel</button>
                                    </div>
                                </form>
                            </div>

                        </div>

                    </div>
                </div>
            </div>
        </div>

    </div>
    

</body>
</html>



