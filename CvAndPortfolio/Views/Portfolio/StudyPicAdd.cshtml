@using CvAndPortfolio.Models.Entity
@model List<TBLSTUDY>
@{
    ViewBag.Title = "StudyPicAdd";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<body>
    <div class="layout-page">
        <div class="content-wrapper">
            <div class="container-xxl flex-grow-1 container-p-y">
                <h4 class="fw-bold py-3 mb-4"><span class="text-muted fw-light">Portfolio / Studies / Pictures /</span> Add</h4>
                <div class="container-xxl flex-grow-1 container-p-y">
                    <div class="row">

                        <div class="col-lg-6 col-md-4 order-1">
                            <form method="post">
                                <div class="row">
                                    <div class="col-lg-12 col-md-12 col-6 mb-4">

                                        <label class="form-label">TITLE</label>
                                        <input type="text"
                                               class="form-control"
                                               name="TITLE"
                                                />


                                    </div>
                                    <div class="col-lg-12 col-md-12 col-6 mb-4">
                                        <label class="form-label">CATEGORY</label>
                                        <select name="STUDYID" class="select2 form-select">
                                            <option value="">Select</option>
                                            @foreach (var item in Model)
                                            {
                                                <option value="@item.ID">@item.TITLE</option>
                                            }
                                        </select>

                                    </div>
                                    <div class="col-lg-12 col-md-12 col-6 mb-4">

                                        <label class="form-label">URL</label>
                                        <textarea rows="8"
                                                  type="text"
                                                  class="form-control"
                                                  name="PICURL"></textarea>



                                    </div>

                                </div>

                                <button type="submit" class="btn btn-primary me-2">Save</button>
                                <button type="reset" class="btn btn-outline-secondary">Cancel</button>
                            </form>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</body>



