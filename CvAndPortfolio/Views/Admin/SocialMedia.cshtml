@using CvAndPortfolio.Models.Entity
@model List<TBLSOCIALMEDIA>



<div class="layout-page">
    <div class="content-wrapper">
        <div class="container-xxl flex-grow-1 container-p-y">
            <h4 class="fw-bold py-3 mb-4"><span class="text-muted fw-light">User Settings /</span> Social Media</h4>
            <div class="card">
                <div class="table-responsive text-nowrap">
                    <table class="table">
                        <thead class="table-light">
                            <tr>
                                <th>TITLE</th>
                                <th>URL</th>
                                <th>ACLASS</th>
                                <th>ICLASS</th>
                                <th>UPDATE</th>
                                <th>DELETE</th>

                            </tr>
                        </thead>
                        <tbody class="table-border-bottom-0">
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.TITLE</td>
                                    <td>@item.URL</td>
                                    <td>@item.ACLASS</td>
                                    <td>@item.ICLASS</td>
                                    <td><a href="/Admin/SocialMediaUpdate/@item.ID" class="btn btn-info">EDIT</a></td>
                                    <td><a href="/Admin/SocialMediaDelete/@item.ID" class="btn btn-warning">DELETE</a></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

            </div>
            <br />
            <a href="/Admin/SocialMediaAdd/" class="btn btn-primary">ADD NEW SOCIAL MEDIA ACCOUNT</a>
        </div>
    </div>
</div>


