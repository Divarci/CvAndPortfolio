@using CvAndPortfolio.Models.Entity
@model List<TBLMESSAGE>


<body>
    <div class="layout-page">
        <div class="content-wrapper">
            <div class="container-xxl flex-grow-1 container-p-y">
                <div class="card">
                    <h5 class="card-header">Latest 5 Messages</h5>
                    <div class="table-responsive text-nowrap">
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th>SENDER</th>
                                    <th>EMAIL</th>
                                    <th>SEUBJECT</th>
                                    <th>MESSAGE</th>

                                </tr>
                            </thead>
                            <tbody class="table-border-bottom-0">
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td><i class="fab fa-angular fa-lg text-danger me-3"></i> <strong>@item.NAME</strong></td>
                                        <td>@item.EMAIL</td>
                                        <td>
                                            @{
                                                var length1 = 30;
                                                if (length1 > @item.SUBJECT.Length)
                                                {
                                                    length1 = @item.SUBJECT.Length;
                                                }
                                                @item.SUBJECT.Substring(0, length1)
                                            }
                                        </td>
                                        <td>
                                            @{
                                                var length = 30;
                                                if (length > @item.MESSAGE.Length)
                                                {
                                                    length = @item.MESSAGE.Length;
                                                }
                                                @item.MESSAGE.Substring(0, length)
                                            }
                                        </td>
                                       
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

</body>