@using CvAndPortfolio.Models.Entity
@model List<TBLCERTIFICATE>

@{
    ViewBag.Title = "Certificates";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<body>
    <div class="layout-page">
        <div class="content-wrapper">
            <div class="container-xxl flex-grow-1 container-p-y">
                <h4 class="fw-bold py-3 mb-4"><span class="text-muted fw-light">Resume /</span> Certificates</h4>
                <div class="card">
                    <div class="table-responsive text-nowrap">
                        <table class="table">
                            <thead class="table-light">
                                <tr>
                                    <th>TITLE</th>
                                    <th>DATE</th>
                                    <th>SOURCE</th>
                                    <th>UPDATE</th>
                                    <th>DELETE</th>
                                </tr>
                            </thead>
                            <tbody class="table-border-bottom-0">
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.TITLE</td>
                                        <td>@item.DATE</td>
                                        <td>@item.LOCATION</td>
                                        <td><a href="/Resume/CertificateUpdate/@item.ID" class="btn btn-info">EDIT</a></td>
                                        <td><a href="/Resume/CertificateDelete/@item.ID" class="btn btn-warning">DELETE</a></td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
                <br />
                <a href="/Resume/CertificateAdd/" class="btn btn-primary">ADD NEW CERTIFICATE</a>
            </div>
        </div>
    </div>
</body>
