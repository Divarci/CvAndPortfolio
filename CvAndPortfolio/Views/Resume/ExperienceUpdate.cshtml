@model CvAndPortfolio.Models.Entity.TBLEXPERIENCE
@{
    ViewBag.Title = "ExperienceUpdate";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<html>
<body>
    <div class="layout-page">
        <!-- Content wrapper -->
        <div class="content-wrapper">
            <!-- Content -->
            <div class="container-xxl flex-grow-1 container-p-y">
                <h4 class="fw-bold py-3 mb-4"><span class="text-muted fw-light">Resume / Experiences /</span> Update</h4>
                <div class="row">
                    <div class="col-md-12">
                        <div class="card mb-4">
                            <h5 class="card-header">UPDATE EXPERIENCE</h5>
                            <hr class="my-0" />
                            <div class="card-body">
                                <form method="POST">
                                    <div class="row">
                                        <div class="mb-3 col-md-12">
                                            <label class="form-label">TITLE</label>
                                            @Html.TextBoxFor(x=>x.TITLE , new {@class="form-control"})
                                            
                                        </div>
                                        <div class="mb-3 col-md-6">
                                            <label class="form-label">DATE</label>
                                            @Html.TextBoxFor(x => x.DATE, new { @class = "form-control" })
                                        </div>
                                        <div class="mb-3 col-md-6">
                                            <label class="form-label">LOCATION</label>
                                            @Html.TextBoxFor(x => x.LOCATION, new { @class = "form-control" })
                                        </div>
                                        <div class="mb-3 col-md-12">
                                            <label class="form-label">DESCRIPTION - 1</label>
                                            @Html.TextAreaFor(x => x.DESCRIPTION1, new { @class = "form-control" })
                                        </div>
                                        <div class="mb-3 col-md-12">
                                            <label class="form-label">DESCRIPTION - 2</label>
                                            @Html.TextAreaFor(x => x.DESCRIPTION2, new { @class = "form-control" })
                                        </div>
                                        <div class="mb-3 col-md-12">
                                            <label class="form-label">DESCRIPTION - 3</label>
                                            @Html.TextAreaFor(x => x.DESCRIPTION3, new { @class = "form-control" })
                                        </div>
                                        <div class="mb-3 col-md-12">
                                            <label class="form-label">DESCRIPTION - 4</label>
                                            @Html.TextAreaFor(x => x.DESCRIPTION4, new { @class = "form-control" })
                                        </div>
                                    </div>
                                    <div class="mt-2">
                                        <button type="submit" class="btn btn-primary me-2">Update</button>
                                        <button type="reset" class="btn btn-outline-secondary">Cancel</button>
                                    </div>
                                </form>
                            </div>

                        </div>

                    </div>
                </div>
            </div>
        </div>

    </div>
</body>
</html>
