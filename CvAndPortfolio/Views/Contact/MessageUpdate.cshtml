@model CvAndPortfolio.Models.Entity.TBLMESSAGE
@{
    ViewBag.Title = "MessageUpdate";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<html>
<body>
    <div class="layout-page">
        <!-- Content wrapper -->
        <div class="content-wrapper">
            <!-- Content -->
            <div class="container-xxl flex-grow-1 container-p-y">
                <h4 class="fw-bold py-3 mb-4"><span class="text-muted fw-light">Contact / Messages /</span> Update</h4>
                <div class="row">
                    <div class="col-md-12">
                        <div class="card mb-4">
                            <h5 class="card-header">UPDATE MESSAGES</h5>
                            <hr class="my-0" />
                            <div class="card-body">
                                <form method="POST">
                                    <div class="row">
                                        <div class="mb-3 col-md-6">
                                            <label class="form-label">SENDER</label>
                                            @Html.TextBoxFor(x => x.NAME, new { @class = "form-control" })
                                        </div>
                                        <div class="mb-3 col-md-6">
                                            <label class="form-label">EMAIL</label>
                                            @Html.TextBoxFor(x => x.EMAIL, new { @class = "form-control" })
                                        </div>
                                        <div class="mb-3 col-md-12">
                                            <label class="form-label">SUBJECT</label>
                                            @Html.TextAreaFor(x => x.SUBJECT, new { @class = "form-control" })
                                        </div>
                                        <div class="mb-3 col-md-12">
                                            <label class="form-label">MESSAGE</label>
                                            @Html.TextAreaFor(x => x.MESSAGE, new { @class = "form-control" })
                                        </div>



                                    </div>
                                    <div class="mt-2">
                                        <button type="submit" class="btn btn-primary me-2">Update</button>
                                        <button type="reset" class="btn btn-outline-secondary">Cancel</button>
                                    </div>
                                </form>
                            </div>

                        </div>

                    </div>
                </div>
            </div>
        </div>

    </div>
</body>
</html>
